<div class="container my-4">
    <h2>Create you tree here !</h2>
    <%= simple_form_for @tree do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :fruit_type %>
        <%= f.input :description %>
        <%= f.input :price_per_year %>
        <%= f.input :quantity_per_year %>
        <%= f.submit class: "bg-orange-500 hover:bg-orange-800 font-bold py-2 px-4 rounded-full" %>
    <% end %>
</div>